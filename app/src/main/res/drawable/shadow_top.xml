<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Shadow color -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius as needed -->
            <padding android:left="0dp" android:top="4dp" android:right="0dp" android:bottom="0dp"/> <!-- Adjust padding for shadow size -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/> <!-- Your view's background color -->
            <corners android:radius="4dp"/> <!-- Adjust corner radius as needed -->
        </shape>
    </item>
</layer-list>